<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="4dp"
    android:background="#E6E2E2"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/task_card_view_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ToggleButton
            android:id="@+id/task_tick"
            android:padding="5dp"
            android:background="@drawable/tick_toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingLeft="5dp" />

        <ToggleButton
            android:id="@+id/task_star"
            android:padding="5dp"
            android:background="@drawable/star_toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>