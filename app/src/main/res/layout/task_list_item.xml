<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="4dp"
    android:background="#E6E2E2"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/task_card_view_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageButton
            android:id="@+id/task_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_task_empty_circle" />

        <!--        <RadioButton-->
        <!--            android:id="@+id/task_tick"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="editTask"
            android:paddingStart="5dp"
            android:paddingLeft="5dp" />

        <ImageButton
            android:id="@+id/task_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="starTask"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_task_empty_star" />

    </LinearLayout>

</androidx.cardview.widget.CardView>